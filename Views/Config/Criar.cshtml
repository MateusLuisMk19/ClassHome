        <input asp-for="@Model.Texto" class="form-control">
        <span asp-validation-for="@Model.Texto" class="text-danger"></span>

        <label asp-for="@Model.TitleText" class="mt-2 @conf.TitleText">Titulo Text Cor</label><br>
        <input asp-for="@Model.TitleText" class="form-control">
        <span asp-validation-for="@Model.TitleText" class="text-danger"></span>

        <label asp-for="@Model.Link" class="mt-2 @conf.TitleText">Link Text</label><br>
        <input asp-for="@Model.Link" class="form-control">
        <span asp-validation-for="@Model.Link" class="text-danger"></span>

    </div>
    <div class="form-group col-5">

