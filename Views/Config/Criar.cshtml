        <label asp-for="@Model.Tabela" class="mt-2 @conf.TitleText">Tabela Class</label><br>
        <input asp-for="@Model.Tabela" class="form-control">
        <span asp-validation-for="@Model.Tabela" class="text-danger"></span>

        <label asp-for="@Model.DCPBoxColor" class="mt-2 @conf.TitleText">Box DCP Cor class</label><br>
        <input asp-for="@Model.DCPBoxColor" class="form-control">
        <span asp-validation-for="@Model.DCPBoxColor" class="text-danger"></span>

