        <input asp-for="@Model.CardCab" class="form-control">
        <span asp-validation-for="@Model.CardCab" class="text-danger"></span>

        <label asp-for="@Model.CardStyle" class="mt-2 @conf.TitleText">Estilo do card</label><br>
        <textarea asp-for="@Model.CardStyle" class="form-control"></textarea>
        <span asp-validation-for="@Model.CardStyle" class="text-danger"></span>

