@model DisciplinaModel

@inject ClassHomedbContext _context
@{
    TurmaModel TurmaRel = ViewBag.TurmaId;
    int idT;
    if (Context.Request.RouteValues.ContainsKey("id"))
    { 
        ViewBag.Subtitulo = "Editar Disciplina"; 
        idT = Model.TurmaId;
    }
    else
    { 
        ViewBag.Subtitulo = "Criar Disciplina"; 
        idT = TurmaRel.TurmaId;
    }


}

<h1 class="text-light">@ViewBag.Subtitulo</h1>
<hr>

<form asp-action="Criar" class="row">
    <input type="hidden" asp-for="@Model.DisciplinaId">
    <div class="form-group col-sm-8 col-lg-3">
        <label asp-for="@Model.Nome">Nome da Disciplina</label><br>
        <input asp-for="@Model.Nome" class="form-control">
        <span asp-validation-for="@Model.Nome" class="text-danger"></span>

        <label asp-for="@Model.Descricao">Descrição</label><br>
        <textarea asp-for="@Model.Descricao" class="form-control"></textarea>
        <span asp-validation-for="@Model.Descricao" class="text-danger"></span>

        <div class="form-group col-3 visually-hidden">
            <div class="w-100"></div>
            <label asp-for="@Model.TurmaId">TurmaId</label><br>
            <input asp-for="@Model.TurmaId" value="@idT" class="form-control col-lg-">
            <span asp-validation-for="@Model.TurmaId" class="text-danger"></span><br>
        </div>
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            <button class="btn btn-primary" type="submit">Salvar</button>
        </div>
    </div>
</form>