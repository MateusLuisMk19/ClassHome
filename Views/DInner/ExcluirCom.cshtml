@model Comentario
@{

    ViewBag.Subtitulo = "Excluir Comentário";

    DisciplinaModel DisRel = ViewBag.Disciplina;

}

<h1 class="text-light">@ViewBag.Subtitulo</h1>
<hr>

<h4>Deseja realmente excluir este comentário?</span></h4>

<form asp-action="Excluir" asp-route-type="2" class="w-25">
    <input type="hidden" asp-for="@Model.ComentarioId">
    <div class="mt-3">
        <a asp-action="Index" asp-route-id="@DisRel.DisciplinaId" class="btn btn-success">Não</a>
        <button class="btn btn-danger" type="submit">Sim</button>
    </div>
</form>