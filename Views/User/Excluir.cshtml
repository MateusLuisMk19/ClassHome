@model UserModel
@inject ClassHomedbContext _context
@{
    var conf = _context.Configs.FirstOrDefault(x => x.Estado == Estado.Ativado);

    ViewBag.Subtitulo = "Exclusão de User";
}


<div class="container p-5 shadow" style="border-radius: 7%; margin-top: 10vh">

    <h4>Deseja realmente excluir o user <b class="text-danger">@Model.NomeCompleto</b>?</h4>

    <form asp-action="ExcluirPost" class="w-25">
        <input type="hidden" asp-for="@Model.Id">
        <div class="mt-3 container">
            <a asp-action="Index" class="btn btn-success">Não</a>
            <button class="btn btn-danger" type="submit">Sim</button>
        </div>
    </form>
</div>