@model ProfessorDisciplinaModel
@inject ClassHomedbContext _context
@{
    var conf = _context.Configs.FirstOrDefault(x => x.Estado == Estado.Ativado);

    ViewBag.Subtitulo = "Add Professor à Disciplina";

    var discRel = ViewBag.DisciplinaId;

}

<h1 class="text-light">@ViewBag.Subtitulo</h1>
<hr>

<form asp-action="AddProffPost" class="row">
    <input type="hidden" asp-for="@Model.DisciplinaId">
    <div class="form-group col-sm-8 col-lg-3">

        <label asp-for="@Model.ProfessorId">Professores</span></label><br>
        <select asp-for="@Model.ProfessorId" class="form-control" asp-items="@(IEnumerable<SelectListItem>)ViewBag.DCP">
            <option disabled selected>Escolha o Professor</option>
        </select>
        <span asp-validation-for="@Model.ProfessorId" class="text-danger"></span>
    </div>
    <p class="mt-3">Nota: Se o professor ainda não estiver associado a esta turma, não aparecerá na lista.</p>

    <div class="mt-3">
        <a asp-action="Index" asp-route-id="@discRel.TurmaId" class="@conf.BTNoff">Cancelar</a>
        <button class="@conf.BTNin" type="submit">Salvar</button>
    </div>
</form>