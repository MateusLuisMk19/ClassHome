@model UserModel
@inject ClassHomedbContext _context
@{
    var conf = _context.Configs.FirstOrDefault(x => x.Estado == Estado.Ativado);

    ViewBag.Subtitulo = "Perfil de Utilizador";
}

<h4 class="mt-5">@ViewBag.Subtitulo</h4>
<hr>

<div class="row">
    <div class="col-2">
        <p>Nome: </p>
        <p>Data de Nascimento: </p>
        <p>E-mail </p>
        <p>Telefone: </p>
    </div>

    <div class="col">
        <p>@Model.NomeCompleto</p>
        <p>@Model.DataNascimento.ToShortDateString()</p>
        <p>@Model.Email</p>
        <p>@Model.PhoneNumber</p>
    </div>
</div>