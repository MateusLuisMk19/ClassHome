@model IEnumerable<Config>
@inject ClassHomedbContext _context
@{
    var conf = _context.Configs.FirstOrDefault(x => x.Estado == Estado.Ativado);

}
<partial name="_MensagemPartial"></partial>

<div class="mt-4">    
    <a asp-action="Criar" class="btn btn-outline-success rounded-circle">Sv</a>
    <a asp-action="Excluir" class="btn btn-outline-danger rounded-circle">Ex</a>
</div>

@if (Model.Count() > 0)
{
    <table class="@conf.Tabela mt-4">
        <thead>
            <tr>
                <th class="@conf.TabelaText">Nome Tema</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var config in Model)
            {
                <tr>
                    <td>@config.Nome</td>
                    <td class="">
                        <a asp-action="Criar" asp-route-id="@config.Id" class="btn btn-sm btn-secondary"><i
                        class="bi-pencil" title="Editar"></i></a>

                        @if(config.Estado == Estado.Desativado)
                        {
                            <a asp-action="Ativar" asp-route-id="@config.Id" class="btn btn-sm btn-success">
                                <i class="bi bi-check2-square" title="Ativar"></i>
                            </a>
                        }

                        <a asp-action="Excluir" asp-route-id="@config.Id" class="btn btn-sm btn-danger">
                            <i class="bi-trash" title="Excluir"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não há nenhuma config.</p>
}